name="Jaspreet"
age=25
gender='Male'
introduction=f"My name is {name}."\
f"My age is {age}."\
f"I am a {gender}."
print(introduction)


name="Rafiul"
age="25"
gender="Male"
introduction=(f"My name is {name}."
f"My age is {age}."
f"Iam a {gender}.")
print(introduction)


name='x'
age=12
gender="Male"
introduction=f""" My name is {name}
My age is {age}
I am a {gender}."""
print(introduction)




print(f"{'Jaspreet'}")

print(f'{"Jaspreet"}')

print(f"""Jaspreet""")

print(f'''Jaspreet''')



print(f"Iam \"Jaspreet\" and  I live in \"Delhi\".")



x=50
y=20
print(f"The result of x+y is {x+y}.")

print(f"The result of {{x+y}} is {x+y}.")

print(f"The result of {{x+y}} is {{{x+y}}}.")


