print(F"My name is {name} and I live in {city}.")



name="Jaspreet"
city="Delhi"
print(f"My name is {name.upper()} and I live in {city.upper()}.")

name="Rafiul"
Dip="computer science and technology"
result="3.50"
A="cgpa"
print(f"Iam {name.upper()}. I am a Student of {Dip.upper()} & My {A.upper()} {result.lower()}")



name="RAFIUL ISLAM"
dip="COMPUTER SCIENCE & TECHNOLOGY"
